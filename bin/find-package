#!/usr/bin/env node

/**
 * find-package
 *
 * search for package.json recursively in passed directory
 */
var os = require('os');
var path = require('path');
var findFileSync = require('find-file-sync');

const DIR = path.resolve(process.argv[2]);
const IGNORE = [ 'node_modules', '.git' ];

var pkgPath = findFileSync(DIR, 'package.json', IGNORE);
if ( ! pkgPath) process.exit(0);

pkgPath = path.resolve(DIR, pkgPath);
process.stdout.write(pkgPath + os.EOL);
